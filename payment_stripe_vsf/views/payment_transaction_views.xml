<odoo>

    <record id="payment_transaction_form" model="ir.ui.view">
        <field name="name">Stripe VSF Transaction Form</field>
        <field name="model">payment.transaction</field>
        <field name="inherit_id" ref="payment.payment_transaction_form"/>
        <field name="arch" type="xml">
            <field name="provider_reference" position="after">
                <field name="stripe_payment_risk_level" readonly="1" invisible="provider_code != 'stripe' and provider_reference"/>
                <field name="stripe_payment_risk_score" readonly="1" invisible="provider_code != 'stripe' and provider_reference"/>
                <field name="stripe_payment_risk_reason" readonly="1" invisible="provider_code != 'stripe' and provider_reference"/>
            </field>
        </field>
    </record>

</odoo>
