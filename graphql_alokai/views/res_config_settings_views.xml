<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="99"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='website_info_settings']" position="after">
                <block title="Alokai" id="alokai_settings">
                    <setting help="Enabling debug mode will log headers, queries, mutations and arguments on each request" id="alokai_debug_mode_settings">
                        <field name="alokai_debug_mode"/>
                    </setting>
                    <setting></setting>

                    <setting title="Enable the Cache Invalidation" id="alokai_cache_invalidation_settings">
                        <field name="alokai_cache_invalidation"/>
                    </setting>
                    <setting></setting>
                    <setting id="alokai_cache_invalidation_key_settings" invisible="not alokai_cache_invalidation">
                        <field name="alokai_cache_invalidation_key" required="alokai_cache_invalidation" t-translation="off"/>
                    </setting>
                    <setting id="alokai_cache_invalidation_url_settings" invisible="not alokai_cache_invalidation">
                        <field name="alokai_cache_invalidation_url" required="alokai_cache_invalidation" t-translation="off"/>
                    </setting>

                    <setting id="alokai_payment_success_return_url_settings">
                        <field name="alokai_payment_success_return_url"/>
                    </setting>
                    <setting id="alokai_payment_error_return_url_settings">
                        <field name="alokai_payment_error_return_url"/>
                    </setting>
                    <setting id="alokai_mailing_list_id_settings">
                        <field name="alokai_mailing_list_id"/>

                    </setting>
                    <setting id="alokai_recent_sales_count_days_settings"
                            help="The number of days used as the lookback period to calculate the recent sales count for each product">
                        <field name="alokai_recent_sales_count_days"/>
                    </setting>
                </block>

                <block title="Alokai Redis" id="alokai_redis_settings">
                    <setting id="alokai_redis_host">
                        <field name="alokai_redis_host"/>
                    </setting>
                    <setting id="alokai_redis_port">
                        <field name="alokai_redis_port"/>
                    </setting>
                </block>

                <block title="Alokai Mail Templates" id="alokai_mail_templates_settings">
                    <setting id="reset_password_email_template_id_settings">
                        <field name="reset_password_email_template_id"/>
                    </setting>
                    <setting id="order_confirmation_email_template_id_settings">
                        <field name="order_confirmation_email_template_id"/>
                    </setting>
                </block>

                <block title="Alokai Images" id="alokai_images_settings">
                    <setting id="alokai_image_quality_settings">
                        <field name="alokai_image_quality"/>
                    </setting>
                    <setting id="alokai_image_background_rgba_settings">
                        <field name="alokai_image_background_rgba"/>
                    </setting>
                    <setting id="alokai_image_resize_limit_settings" help="Limit in pixels to resize image for width and height">
                        <field name="alokai_image_resize_limit"/>
                    </setting>
                </block>

            </xpath>
        </field>
    </record>

    <menuitem name="Menu"
              id="website.menu_website_menu_list"
              action="website.action_website_menu"
              parent="website.menu_website_global_configuration"
              sequence="45"
              groups="base.group_no_one"/>

    <menuitem name="Mega Menu"
              id="menu_website_mega_menu_list"
              action="graphql_alokai.action_website_mega_menu"
              parent="website.menu_website_global_configuration"
              sequence="46"
              groups="base.group_no_one"/>

    <menuitem name="Footer"
              id="menu_website_footer_list"
              action="graphql_alokai.action_website_footer"
              parent="website.menu_website_global_configuration"
              sequence="47"
              groups="base.group_no_one"/>

</odoo>
